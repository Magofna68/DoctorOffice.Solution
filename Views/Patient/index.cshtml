@{
  Layout = "_Layout";
}

@using DoctorOffice.Models;
@model List<DoctorOffice.Models.Patient>;

<h1>Patients</h1>

@if (@Model.Count == 0)
{
  <h3>No patients have been added yet!</h3>
}

@foreach (Patient patient in Model.OrderBy(d => d.Name))
{
  <li>@Html.ActionLink($"{patient.Name}" + $" || {patient.Birthday}", "Details", new { id = patient.PatientId })</li>
}

<p>@Html.ActionLink("Add new patient", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>